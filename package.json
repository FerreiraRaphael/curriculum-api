{
  "name": "curriculum-api",
  "version": "0.1.0",
  "description": "A API to manage my curriculum, works, projects and skills",
  "author": "Raphael Ferreira",
  "license": "MIT",
  "engines": {
    "node": "8.2.0"
  },
  "dependencies": {
    "bcrypt": "^1.0.2",
    "body-parser": "^1.17.2",
    "compression": "^1.6.2",
    "cookie-parser": "^1.4.3",
    "express": "4.14.0",
    "http-status-codes": "^1.1.6",
    "jsonwebtoken": "^7.4.1",
    "mongoose": "^4.11.0",
    "morgan": "^1.8.2",
    "passport": "^0.3.2",
    "passport-http-bearer": "^1.0.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-core": "^6.24.1",
    "babel-eslint": "^7.2.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-env": "^1.4.0",
    "babel-preset-flow": "^6.23.0",
    "babel-register": "^6.24.1",
    "eslint": "^3.19.0",
    "eslint-config-airbnb-base": "^11.1.3",
    "eslint-config-prettier": "^2.2.0",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-prettier": "^2.1.2",
    "flow-bin": "^0.50.0",
    "jest": "^20.0.4",
    "nodemon": "^1.11.0",
    "prettier": "^1.5.2",
    "prettier-eslint": "^6.4.2",
    "rimraf": "^2.6.1",
    "supertest": "^3.0.0",
    "supertest-as-promised": "^4.0.2",
    "swagger-jsdoc": "^1.9.6"
  },
  "babel": {
    "presets": [
      "env",
      "flow"
    ],
    "plugins": [
      [
        "transform-runtime",
        {
          "polyfill": false,
          "regenerator": true
        }
      ]
    ]
  },
  "eslintConfig": {
    "root": true,
    "parser": "babel-eslint",
    "extends": [
      "airbnb-base",
      "prettier"
    ],
    "parserOptions": {
      "ecmaVersion": 7,
      "sourceType": "module"
    },
    "plugins": [
      "prettier",
      "flowtype"
    ],
    "rules": {
      "prettier/prettier": "error",
      "no-underscore-dangle": 0,
      "linebreak-style": [
        "error",
        "unix"
      ]
    },
    "globals": {
      "express$Application": true,
      "express$Response": true,
      "express$Request": true,
      "express$Middleware": true,
      "express$NextFunction": true,
      "express$ApiRequest": true,
      "ResponseObject": true
    },
    "env": {
      "jest": true
    }
  },
  "jest": {
    "transform": {
      ".*": "<rootDir>/node_modules/babel-jest"
    }
  },
  "scripts": {
    "start": "nodemon api/server --exec babel-node --inspect --presets env,flow",
    "start:prod": "node dist/server",
    "flow": "flow",
    "prebuild": "rimraf ./dist && mkdir dist",
    "build": "babel api -d dist --presets env,flow",
    "lint": "eslint api --fix",
    "test": "jest",
    "serve": "yarn build && yarn start:prod"
  }
}
